<Window x:Class="initView.Properties.RegisteForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:initView.Properties"
        mc:Ignorable="d"
        Title="用户注册" Height="450" Width="800">
    <Grid Height="433">
        <Label x:Name="uId" Content="学   号：" HorizontalAlignment="Left" Height="35" Margin="37,64,0,0" VerticalAlignment="Top" Width="60"/>
        <TextBox x:Name="uIdTextBox" HorizontalAlignment="Left" Height="30" Margin="117,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>

        <Label x:Name="uId_Copy" Content="姓   名：" HorizontalAlignment="Left" Height="35" Margin="37,109,0,0" VerticalAlignment="Top" Width="60"/>
        <TextBox x:Name="uNameTextBox" HorizontalAlignment="Left" Height="30" Margin="117,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        
        <Label x:Name="uPassWordL" Content="密   码：" HorizontalAlignment="Left" Height="35" Margin="37,156,0,0" VerticalAlignment="Top" Width="60" RenderTransformOrigin="0.565,0.214"/>
        <TextBox x:Name="uPassWordTextBox" HorizontalAlignment="Left" Height="30" Margin="117,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>

        <Label x:Name="uPassWordL_Again" Content="确认密码：" HorizontalAlignment="Left" Height="35" Margin="27,205,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="uPassWordTextBox_Again" Height="30" Margin="117,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150"/>
        
        <Label x:Name="uProClassL" Content="专业班级：" HorizontalAlignment="Left" Height="35" Margin="27,252,0,0" VerticalAlignment="Top" Width="70" RenderTransformOrigin="0.565,0.214"/>
        <TextBox x:Name="uProClassTextBox" Height="30" Margin="117,252,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150"/>

        <Label x:Name="uPhoneL" Content="手机号：" HorizontalAlignment="Left" Height="35" Margin="334,64,0,0" VerticalAlignment="Top" Width="60"/>
        <TextBox x:Name="uPhoneTextBox" HorizontalAlignment="Left" Height="30" Margin="412,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>

        <Label x:Name="uIdCardL" Content="身份证号：" HorizontalAlignment="Left" Height="35" Margin="324,109,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="uIDCardTextBox" HorizontalAlignment="Left" Height="30" Margin="412,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>

        <Label x:Name="uBankCardL" Content="银行卡号：" HorizontalAlignment="Left" Height="35" Margin="324,161,0,0" VerticalAlignment="Top" Width="78"/>
        <TextBox x:Name="uBankCardTextBox" HorizontalAlignment="Left" Height="30" Margin="412,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>

        <Label x:Name="uEmailL" Content="个人邮箱：" HorizontalAlignment="Left" Height="35" Margin="326,205,0,0" VerticalAlignment="Top" Width="68"/>
        <TextBox x:Name="verifyEmailTextBox" HorizontalAlignment="Left" Height="30" Margin="412,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>

        <Label x:Name="verifyCodeL" Content="验  证  码：" HorizontalAlignment="Left" Height="35" Margin="324,252,0,0" VerticalAlignment="Top" Width="70" RenderTransformOrigin="0.565,0.214"/>
        <TextBox x:Name="verifyCodeTextBox" Height="30" Margin="412,252,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" />

        <Button x:Name="sendEmailButton" Content="发送验证码" HorizontalAlignment="Left" Margin="585,257,0,0" VerticalAlignment="Top" Width="70" Height="25" Click="SendEmail_Click"/>
        <Button x:Name="registeButton" Content="提交注册" HorizontalAlignment="Left" Margin="412,349,0,0" VerticalAlignment="Top" Width="68" Height="30" Click="registeButton_Click" RenderTransformOrigin="-1.191,0.648"/>
        <Button x:Name="exitButton" Content="取消/退出" HorizontalAlignment="Left" Margin="520,350,0,0" VerticalAlignment="Top" Width="68" Height="30" Click="ExitButton_Click"/>

    </Grid>
</Window>
