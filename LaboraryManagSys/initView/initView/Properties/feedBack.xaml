<Window x:Class="initView.Properties.feedBack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:initView.Properties"
        mc:Ignorable="d"
        Title="匿名反馈" Height="435" Width="310" AllowsTransparency="True" WindowStyle="None">
    <Grid Margin="0,0,0,1.0">
        <Image x:Name="E_mail_jpg" Margin="0,0,-299.4,0.6" Source="/initView;component/picturePath/E-mail.jpg" Stretch="Fill"/>
        <TextBox x:Name="feedBackTextBox" AcceptsReturn="True" HorizontalAlignment="Left" Height="225" Margin="130,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" VerticalContentAlignment="Top" FontFamily="Yu Gothic UI Light" Foreground="#DDFFFFFF" FontWeight="Bold" FontSize="16">
            <TextBox.Background>
                <ImageBrush/>
            </TextBox.Background>
        </TextBox>

        <Button x:Name="send" Content="Send" HorizontalAlignment="Left" Height="25" Margin="200,360,0,0" VerticalAlignment="Top" Width="95" Click="Send_Click"/>
        <Button x:Name="exitButton" Content="取消/退出" HorizontalAlignment="Left" Margin="200,396,0,0" VerticalAlignment="Top" Width="95" Click="ExitButton_Click" Height="24"/>

    </Grid>
</Window>
