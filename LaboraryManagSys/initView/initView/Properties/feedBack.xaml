<Window x:Class="initView.Properties.feedBack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:initView.Properties"
        mc:Ignorable="d"
        Title="匿名反馈" Height="435" Width="310">
    <Grid Margin="0,0,0,1.0">

        <Image x:Name="E_mail_jpg" Margin="0,0,-299.4,0.6" Source="/initView;component/E-mail.jpg" Stretch="Fill"/>

        <TextBox x:Name="feedBackTextBox" HorizontalAlignment="Left" Height="245" Margin="130,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162" VerticalContentAlignment="Top" FontFamily="Yu Gothic UI Light" Foreground="#DDFFFFFF" FontWeight="Bold" FontSize="16">
            <TextBox.Background>
                <ImageBrush/>
            </TextBox.Background>
        </TextBox>

        <Button x:Name="send" Content="Send" HorizontalAlignment="Left" Height="30" Margin="117,345,0,0" VerticalAlignment="Top" Width="78" Click="Send_Click"/>
        <Button x:Name="exitButton" Content="取消/退出" HorizontalAlignment="Left" Margin="225,346,0,0" VerticalAlignment="Top" Width="70" Click="ExitButton_Click" Height="34"/>

    </Grid>
</Window>
